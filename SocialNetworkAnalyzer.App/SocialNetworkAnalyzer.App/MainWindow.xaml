<Window x:Class="SocialNetworkAnalyzer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Network Analyzer" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!-- SOL: Canvas -->
        <Border Grid.Column="0" Margin="10" BorderBrush="#444" BorderThickness="1" CornerRadius="6">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="GraphCanvas" Width="1200" Height="900" Background="#111"/>
            </ScrollViewer>
        </Border>

        <!-- SAĞ: Bilgi paneli -->
        <Border Grid.Column="1" Margin="10,10,10,10" BorderBrush="#444" BorderThickness="1" CornerRadius="6" Padding="12">
            <StackPanel>
                <TextBlock Text="Seçili Node" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Id:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtId" Margin="0,0,0,10"/>

                <TextBlock Text="Label:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtLabel" Margin="0,0,0,10"/>

                <TextBlock Text="Activity:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtActivity" Margin="0,0,0,10"/>

                <TextBlock Text="Interaction:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtInteraction" Margin="0,0,0,10"/>

                <TextBlock Text="Degree:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtDegree" Margin="0,0,0,10"/>

                <TextBlock Text="Komşular:" FontWeight="SemiBold"/>
                <TextBlock x:Name="TxtNeighbors" TextWrapping="Wrap" />

                <Separator Margin="0,12,0,12"/>

                <TextBlock Text="İpucu" FontWeight="Bold"/>
                <TextBlock Text="Canvas üstünde node’a tıkla. Seçili node bilgileri burada güncellenir."
                           TextWrapping="Wrap" Opacity="0.85"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
