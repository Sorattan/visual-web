<Window x:Class="SocialNetworkAnalyzer.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Social Network Analyzer" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="360" />
    </Grid.ColumnDefinitions>

    <!-- SOL: Canvas -->
    <Border Grid.Column="0" Margin="10" BorderBrush="#444" BorderThickness="1" CornerRadius="6">
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Canvas x:Name="GraphCanvas" Width="1400" Height="1000" Background="#111"/>
      </ScrollViewer>
    </Border>

    <!-- SAĞ: Panel -->
    <Border Grid.Column="1" Margin="10" BorderBrush="#444" BorderThickness="1" CornerRadius="6" Padding="12">
      <DockPanel LastChildFill="True">

        <!-- Status bar -->
        <Border DockPanel.Dock="Bottom" Margin="0,10,0,0" Padding="8" CornerRadius="6" Background="#1B1B1B" BorderBrush="#333" BorderThickness="1">
          <TextBlock x:Name="TxtStatus" Text="Hazır." TextWrapping="Wrap"/>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <StackPanel>

            <TextBlock Text="Node Listesi" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>
            <ListBox x:Name="NodesList" Height="120" SelectionChanged="NodesList_SelectionChanged"/>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Seçili Node" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>

            <Grid Margin="0,0,0,10">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <TextBlock Grid.Row="0" Grid.Column="0" Text="Id:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxtId"/>

              <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,6,0,0" Text="Label:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,6,0,0" x:Name="TxtLabel"/>

              <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,6,0,0" Text="Activity:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,6,0,0" x:Name="TxtActivity"/>

              <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,6,0,0" Text="Interaction:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,6,0,0" x:Name="TxtInteraction"/>

              <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,6,0,0" Text="Degree:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="4" Grid.Column="1" Margin="0,6,0,0" x:Name="TxtDegree"/>

              <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,6,0,0" Text="Komşular:" FontWeight="SemiBold"/>
              <TextBlock Grid.Row="5" Grid.Column="1" Margin="0,6,0,0" x:Name="TxtNeighbors" TextWrapping="Wrap"/>
            </Grid>

            <Separator Margin="0,10,0,10"/>

            <!-- NODE CRUD -->
            <TextBlock Text="Node İşlemleri" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>

            <TextBlock Text="Id" />
            <TextBox x:Name="InNodeId" Margin="0,2,0,8"/>

            <TextBlock Text="Label" />
            <TextBox x:Name="InNodeLabel" Margin="0,2,0,8"/>

            <TextBlock Text="Activity (double)" />
            <TextBox x:Name="InNodeActivity" Margin="0,2,0,8"/>

            <TextBlock Text="Interaction (double)" />
            <TextBox x:Name="InNodeInteraction" Margin="0,2,0,8"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
              <CheckBox x:Name="ChkAutoPos" Content="Otomatik konum" IsChecked="True" VerticalAlignment="Center"/>
            </StackPanel>

            <Grid Margin="0,0,0,8">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Margin="0,0,6,0">
                <TextBlock Text="X (opsiyonel)"/>
                <TextBox x:Name="InNodeX" Margin="0,2,0,0"/>
              </StackPanel>

              <StackPanel Grid.Column="1">
                <TextBlock Text="Y (opsiyonel)"/>
                <TextBox x:Name="InNodeY" Margin="0,2,0,0"/>
              </StackPanel>
            </Grid>

            <WrapPanel Margin="0,4,0,0">
              <Button Content="Node Ekle" Width="100" Margin="0,0,8,8" Click="BtnAddNode_Click"/>
              <Button Content="Node Güncelle" Width="110" Margin="0,0,8,8" Click="BtnUpdateNode_Click"/>
              <Button Content="Node Sil" Width="90" Margin="0,0,8,8" Click="BtnDeleteNode_Click"/>
              <Button Content="Örnek Graf" Width="95" Margin="0,0,8,8" Click="BtnSample_Click"/>
            </WrapPanel>

            <Separator Margin="0,12,0,12"/>

            <!-- EDGE CRUD -->
            <TextBlock Text="Edge İşlemleri" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>

            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <StackPanel Grid.Column="0" Margin="0,0,6,0">
                <TextBlock Text="A Id"/>
                <TextBox x:Name="InEdgeA" Margin="0,2,0,0"/>
              </StackPanel>

              <StackPanel Grid.Column="1">
                <TextBlock Text="B Id"/>
                <TextBox x:Name="InEdgeB" Margin="0,2,0,0"/>
              </StackPanel>
            </Grid>

            <WrapPanel Margin="0,10,0,0">
              <Button Content="Edge Ekle" Width="100" Margin="0,0,8,8" Click="BtnAddEdge_Click"/>
              <Button Content="Edge Sil" Width="90" Margin="0,0,8,8" Click="BtnDeleteEdge_Click"/>
            </WrapPanel>

          </StackPanel>
        </ScrollViewer>
      </DockPanel>
    </Border>
  </Grid>
</Window>